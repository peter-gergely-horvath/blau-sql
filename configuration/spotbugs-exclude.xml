<FindBugsFilter>
    <Match>
        <Class name="~.*Window\$.*" />
        <Bug pattern="SIC_INNER_SHOULD_BE_STATIC_ANON" />
        <!-- Windows may have Runnable classes as members -->
    </Match>
    <Match>
        <Class name="com.github.blausql.core.connection.DatabaseConnection" />
        <Method name="&lt;init&gt;"/>
        <Bug pattern="EI_EXPOSE_REP" />
        <!-- Acceptable, as the wrapped connection is created for this object only: see DatabaseConnectionFactory -->
    </Match>
    <Match>
        <Class name="com.github.blausql.core.connection.StatementResult" />
        <Method name="getQueryResult" />
        <Bug pattern="EI_EXPOSE_REP" />
        <!-- Acceptable, as the class is used to pass data -->
    </Match>
    <Match>
        <Class name="com.github.blausql.ui.sql.ExecuteStatementBackgroundWorker" />
        <Method name="doBackgroundTask" />
        <Bug pattern="SQL_NONCONSTANT_STRING_PASSED_TO_EXECUTE" />
        <!-- The passed string is coming from the user -->
    </Match>
    <Match>
        <Class name="com.github.blausql.ui.util.BackgroundWorker" />
        <Method name="doBackgroundTask" />
        <Bug pattern="THROWS_METHOD_THROWS_CLAUSE_BASIC_EXCEPTION" />
        <!-- Framework method, that must handle all possible types actually used -->
    </Match>
    <Match>
        <Class name="com.github.blausql.core.preferences.ConnectionDefinitionRepositoryFactory" />
        <Method name="getRepository" />
        <Bug pattern="MS_EXPOSE_REP" />
        <!-- The returned type is an interface, and the object shall not be mutable -->
    </Match>
    <Match>
        <Class name="com.github.blausql.StandardTerminalUI" />
        <Method name="getWindowBasedTextGUI" />
        <Bug pattern="EI_EXPOSE_REP" />
        <!-- This behaviour is intentional -->
    </Match>
    <Match>
        <Class name="com.github.blausql.ui.util.BackgroundWorker" />
        <Or>
            <Method name="start" />
            <Method name="cancel" />
        </Or>
        <Bug pattern="THROWS_METHOD_THROWS_RUNTIMEEXCEPTION" />
        <!-- This behaviour is intentional -->
    </Match>

    <!-- Centralized suppressions added by request -->
    <Match>
        <Class name="com.github.blausql.core.connection.DatabaseConnection" />
        <Method name="executeStatement" />
        <Bug pattern="SQL_NONCONSTANT_STRING_PASSED_TO_EXECUTE" />
        <!-- Interactive SQL client: executing user-provided SQL is intentional. -->
    </Match>

    <Match>
        <Class name="com.github.blausql.ui.components.ApplicationWindow$ExceptionHandledAction" />
        <Bug pattern="THROWS_METHOD_THROWS_CLAUSE_BASIC_EXCEPTION" />
        <!-- UI actions may throw various checked exceptions; centrally handled and shown to users. -->
    </Match>

    <Match>
        <Or>
            <Class name="com.github.blausql.core.connection.DatabaseConnectionFactory" />
            <Class name="com.github.blausql.core.connection.DatabaseConnection" />
            <Class name="com.github.blausql.ui.sql.ExecuteStatementBackgroundWorker" />
        </Or>


        <Bug pattern="THROWS_METHOD_THROWS_RUNTIMEEXCEPTION" />
        <!--
        This behaviour translates low level technical exceptions to
        exceptions with human friendly explanations.
        -->
    </Match>


    <Match>
        <Or>
            <Class name="com.github.blausql.ui.DisplayThrowableDialog" />
        </Or>


        <Bug pattern="MC_OVERRIDABLE_METHOD_CALL_IN_CONSTRUCTOR" />
        <!-- Detection is incorrect. -->
    </Match>





</FindBugsFilter>